{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [{
            "packagePatterns": [
                "^@types/"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        },
        {
            "groupName": "webpack packages",
            "matchPackageNames": [
                "webpack",
                "webpack-cli"
            ]
        }
    ]
}